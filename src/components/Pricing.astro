---
import { getTranslations, type Locale } from '../i18n/translations';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
---

<section id="pricing" class="py-20 sm:py-32">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--color-text-primary)] mb-4">
        {t.pricing.title}
      </h2>
      <p class="max-w-2xl mx-auto text-lg text-[var(--color-text-secondary)]">
        {t.pricing.subtitle}
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Free Tier -->
      <div class="p-8 rounded-2xl bg-[var(--color-bg-card)] border border-[var(--color-border)]">
        <div class="mb-6">
          <h3 class="text-xl font-semibold text-[var(--color-text-primary)] mb-2">
            {t.pricing.free.title}
          </h3>
          <p class="text-[var(--color-text-secondary)]">
            {t.pricing.free.description}
          </p>
        </div>

        <div class="mb-6">
          <span class="text-4xl font-bold text-[var(--color-text-primary)]">
            {t.pricing.free.price}
          </span>
        </div>

        <ul class="space-y-3 mb-8">
          {t.pricing.free.features.map((feature) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-[var(--color-text-secondary)] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-[var(--color-text-secondary)]">{feature}</span>
            </li>
          ))}
        </ul>

        <a
          href="#"
          class="block w-full py-3 px-6 text-center rounded-xl border border-[var(--color-border)] text-[var(--color-text-primary)] font-medium hover:bg-[var(--color-bg-card-hover)] transition-colors"
        >
          {t.pricing.free.button}
        </a>
      </div>

      <!-- Premium Tier -->
      <div class="p-8 rounded-2xl bg-gradient-to-b from-[var(--color-primary)]/10 to-[var(--color-bg-card)] border-2 border-[var(--color-primary)] relative">
        <!-- Popular badge -->
        <div class="absolute -top-3 left-1/2 -translate-x-1/2">
          <span class="px-4 py-1 bg-[var(--color-primary)] text-white text-sm font-medium rounded-full">
            Recommended
          </span>
        </div>

        <div class="mb-6">
          <h3 class="text-xl font-semibold text-[var(--color-text-primary)] mb-2">
            {t.pricing.premium.title}
          </h3>
          <p class="text-[var(--color-text-secondary)]">
            {t.pricing.premium.description}
          </p>
        </div>

        <div class="mb-6">
          <span class="text-4xl font-bold text-[var(--color-text-primary)]">
            {t.pricing.premium.price}
          </span>
        </div>

        <ul class="space-y-3 mb-8">
          {t.pricing.premium.features.map((feature) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-[var(--color-primary)] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-[var(--color-text-primary)]">{feature}</span>
            </li>
          ))}
        </ul>

        <a
          href="#"
          class="block w-full py-3 px-6 text-center rounded-xl bg-[var(--color-primary)] text-white font-medium hover:bg-[var(--color-primary-dark)] transition-colors"
        >
          {t.pricing.premium.button}
        </a>
      </div>
    </div>
  </div>
</section>
